-if policy(wiki).edit?
  #wiki-nav
    %ul.list-unstyled
      = content_tag :li, link_to("Show", wiki), class: is_link_active(wiki_path(wiki))
      = content_tag :li, link_to("Edit", edit_wiki_path(wiki)), class: is_link_active(edit_wiki_path(wiki))
      - if policy(wiki).destroy?
        = content_tag :li, link_to("Delete", wiki, method: :delete, data: { confirm: 'Are you sure you want to delete this wiki?' })